{% extends "GameCardBundle::layout.html.twig" %}

{% block title %}
    Les joueurs - {{ parent() }}
{% endblock %}

{% block game_body_title %}
    <div class="page-header">
        <h1>Les joueurs</h1>
    </div>
    {{ render(controller("GameCardBundle:Player:menu")) }}
{% endblock %}

{% block game_body %}
    <h2>Les historiques, les statitisques, les points, etc.</h2>

    {% for p in players  %}
        <div class="card">
            <span class="fistname">{{ p.firstname|capitalize }}</span>
            <span class="lastname">{{ p.lastname }}</span>
            <span class="birthdate">{{ p.birth|date("d/m/Y") }}</span>
        </div>
        <hr>
    {% endfor %}
{% endblock %}
